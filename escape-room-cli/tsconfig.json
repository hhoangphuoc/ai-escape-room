{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"outDir": "dist",
		"module": "Node16",
		"moduleResolution": "Node16",
		"target": "ESNext",
		"esModuleInterop": true,
		"jsx": "react",
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["index.ts", "source"],
	"exclude": ["node_modules", "dist"]
}
