{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"outDir": "dist",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"strict": true,
		"lib": ["ES2022"],
		"baseUrl": "source",
		"paths": {
			"~/*": ["*"]
		},
		// "declaration": true,
		// "declarationDir": "./dist/types",
	},
	"include": [
		"index.ts",
		"source/**/*.ts",
		"source/**/*.tsx"
	],
	"exclude": [
		"node_modules", 
		"dist",
		"coverage",
		"test.tsx"
	]
}
