// tsconfig.json (at your project root)
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",            
    "moduleResolution": "node",
    "esModuleInterop": true,        
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "constant/**/*.ts",
    "api/**/*.ts",
    "mcp/**/*.ts",
    "agents/**/*.ts",
    "utils/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}